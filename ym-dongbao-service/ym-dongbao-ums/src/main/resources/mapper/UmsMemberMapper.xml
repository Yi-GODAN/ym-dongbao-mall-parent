<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yiming.mapper.UmsMemberMapper">
    <resultMap type="com.yiming.entity.UmsMember" id="umsMemberMap">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="icon" column="icon"/>
        <result property="email" column="email"/>
        <result property="nickName" column="nick_name"/>
        <result property="note" column="note"/>
        <result property="createTime" column="create_time"/>
        <result property="loginTime" column="login_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <insert id="insertMember" parameterType="com.yiming.entity.UmsMember">
        insert into ums_member values(#{umsMember})
    </insert>

    <insert id="insertMemberByName">
        insert into ums_member(username) values (#{username})
    </insert>

    <select id="selectMember" resultType="com.yiming.entity.UmsMember" parameterType="java.lang.Integer">
        select * from ums_member where id = #{id}
    </select>


</mapper>
